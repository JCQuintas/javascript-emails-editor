{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outFile": "./dist/index.d.ts",
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
